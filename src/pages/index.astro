---
import Layout from '../layouts/Layout.astro';
import Cards from '../components/Card';
import Filters from '../components/Filters';
---

<Layout
  title="Looking for Talent"
  description="Aquí puedes buscar perfiles profecionales que se adapten a tus necesidades"
  className="grid grid-cols-[18rem_auto] gap-4 relative"
>
  <section class="bg-white min-h-96 h-min rounded-2xl text-center">
    <h1 class="text-xl font-bold text-blue-400">Busca tu talento</h1>
    <p class="text-gray-500 text-sm mt-3">Encuentra perfiles de desarrolladores, diseñadores gráficos o cualquier otro talento</p>
    <Filters client:load/>
  </section>

  <ul class="flex flex-col gap-4">
    <Cards client:load />
  </ul>
</Layout>
