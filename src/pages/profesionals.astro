---
import Cards from '../components/Card.astro';
import Section from '../components/Section.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Looking for Talent"
  className="grid grid-cols-[17.5rem_auto] gap-4 relative"
>
  <Section>
    <h1 class="text-xl font-bold text-center text-secondary">Busca tu talento</h1>
    <p class="text-gray-500 text-sm mt-1">
      Encuentra perfiles de desarrolladores, diseñadores gráficos o cualquier
      otro talento
    </p>
  </Section>

  <ul class="flex flex-col gap-4">
    <Cards />
  </ul>
</Layout>
