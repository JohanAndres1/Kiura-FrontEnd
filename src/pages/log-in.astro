---
import Button from '../components/Button.astro';
import GoogleIcon from '../icons/GoogleIcon.astro';
import LinkedinIcon from '../icons/LinkedinIcon.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>LogIn - Looking for Talent</title>
  </head>
  <body class="w-full min-h-screen content-center bg-slate-200 font-spartan">
    <div
      class="bg-white max-w-96 m-auto drop-shadow-2xl shadow-lg shadow-primary/65 rounded-3xl py-6 px-9 border-solid border-2 border-secondary/30 text-center"
    >
      <h1 class="font-extrabold text-secondary text-3xl">Log In</h1>
      <form action="" class="mt-5">
        <input
          required
          class="w-full border-none py-4 px-5 rounded-3xl mt-2 [border-inline:_2px_solid_transparent] focus:outline-none focus:[border-inline:_2px_solid_#12B1D1]"
          type="email"
          name="email"
          id="email"
          placeholder="E-mail"
        />
        <input
          required
          class="w-full border-none py-4 px-5 rounded-3xl mt-2 [border-inline:_2px_solid_transparent] focus:outline-none focus:[border-inline:_2px_solid_#12B1D1]"
          type="password"
          name="password"
          id="password"
          placeholder="Password"
        />
        <span class="block mt-2 ml-2 text-start"
          ><a class="text-sm text-secondary" href="/">Forgot Password?</a></span
        >
        <input
          class="block w-full font-bold text-white bg-gradient-to-l to-secondary from-primary p-3.5 rounded-3xl shadow-md shadow-sky-400/80 m-5 mx-auto hover:scale-105 hover:shadow-lg hover:shadow-black/20 active:scale-95 transition-all duration-200"
          type="submit"
          value="Sign In"
        />
      </form>
      <div class="mt-6">
        <span class="block text-xs text-gray-500">Or Sign in with</span>
        <div class="flex justify-center gap-3 mt-1">
          <Button className="hover:scale-110">
            <LinkedinIcon className="size-6" />
          </Button>
          <Button className="hover:scale-110">
            <GoogleIcon className="size-6" />
          </Button>
        </div>
      </div>
      <span class="text-gray-500 text-sm mt-5 block"
        >Don't have an account? <a class="text-blue-800" href="./sign-up"
          >Sign Up</a
        ></span
      >
    </div>
  </body>
</html>
