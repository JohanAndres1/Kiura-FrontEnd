---
import Button from '../../components/Button.astro';
import Section from '../../components/Section.astro';
import EmailIcon from '../../icons/EmailIcon.astro';
import GithubIcon from '../../icons/GithubIcon.astro';
import LinkedinIcon from '../../icons/LinkedinIcon.astro';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const data = await fetch('https://6602f0839d7276a75554a537.mockapi.io/api/v1/profesionals').then(response => response.json());

  return data.map(({ createdAt, name, avatar, age, dni, tel, certificate, price, email, password, job, id }) => {
    return {
      params: { id: id },
      props: { createdAt, name, avatar, age, dni, tel, certificate, price, email, password, job, id},
    };
  });
}

