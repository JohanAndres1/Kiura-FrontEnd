---
const profesionals = await fetch(
  'https://6602f0839d7276a75554a537.mockapi.io/api/v1/profesionals'
).then((response) => response.json());
---

{
  profesionals.map(({ avatar, name, id, email, tel, job, price }) => {
    return (
      <li
        class="list-none flex items-center justify-between h-20 w-full m-auto px-5 bg-white rounded-2xl relative"
        transition:name={`box ${id} section`}
      >
        <div class="w-1 h-6 bg-secondary rounded-full absolute left-2" />
        <header class="flex items-center">
          <img
            src={avatar}
            alt={name}
            class="w-16 rounded-full"
            transition:name={`box ${id} img`}
          />
          <div class="px-3">
            <a
              class="text-2xl text-black/80 hover:text-secondary font-bold"
              href={`/profesional/${id}`}
            >
              {name}
            </a>
            <p class="font-semibold text-black/70">{job}</p>
          </div>
        </header>
        <footer class="flex gap-4 h-11 items-center">
          <p class="">{email}</p>
          <p class="">{tel}</p>
          <p class="border-l-2 pl-4 h-8 content-center text-xs font-semibold text-primary">
            PRICE
          </p>
          <p class="text-primary font-semibold bg-primary/20 rounded-xl h-8 w-16 text-center content-center">
            ${price}
          </p>
        </footer>
      </li>
    );
  })
}
